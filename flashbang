			html {
				background:#fff!important;
				filter:brightness(10);
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
			}

			.criticalError {
				filter:brightness(1);
			}
			.hidden {
				display:none;
			}

			:not(:root):fullscreen::backdrop {
				background: #fff;
			}

			h1 {
				color:#000;
				filter:brightness(0);
				z-index:10
			}

			video {
				position:fixed;
				top:0;
				left:0;
				right:0;
				bottom:0;
			}
		</style>
